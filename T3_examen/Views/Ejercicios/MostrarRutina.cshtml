@{
}

@if (ViewBag.Rutinas.Count != 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Tipo</th>
                <th></th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in ViewBag.Rutinas)
            {
                <tr>
                    <td>@item.nombreRutina</td>
                    <td>@item.tipoRutina</td>
                    <td>
                        <a href="/Ejercicios/DetalleRutina?idRutina=@item.id">Detalle</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
